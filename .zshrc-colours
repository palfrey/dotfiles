local RED=$(print '%{\e[1;31m%}')
local LIGHT_RED=$(print '%{\e[0;31m%}')
local CYAN=$(print '%{\e[1;36m%}')
local LIGHT_CYAN=$(print '%{\e[0;36m%}')
local BLUE=$(print '%{\e[1;34m%}')
local LIGHT_BLUE=$(print '%{\e[0;34m%}')
local GREEN=$(print '%{\e[1;32m%}')
local LIGHT_GREEN=$(print '%{\e[0;32m%}')
local MAGENTA=$(print '%{\e[1;35m%}')
local LIGHT_MAGENTA=$(print '%{\e[0;35m%}')
local YELLOW=$(print '%{\e[1;33m%}')
local LIGHT_YELLOW=$(print '%{\e[0;33m%}')
local GRAY=$(print '%{\e[1;30m%}')
local LIGHT_GRAY=$(print '%{\e[0;37m%}')
local WHITE=$(print '%{\e[1;37m%}')
local NO_COLOUR=$(print '%{\e[0m%}')

local BEGINNING_OF_LINE=$(print '%{\e[80D%}')
